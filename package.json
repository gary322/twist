    "@supabase/supabase-js": "^2.39.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "axios": "^1.10.0",
    "chai": "^5.2.1",
    "ioredis": "^5.3.2",
    "jest": "^29.7.0",
    "mocha": "^11.7.1",
    "playwright": "^1.54.1",
    "puppeteer": "^24.12.1",
    "sinon": "^21.0.0",
    "socket.io-client": "^4.7.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
