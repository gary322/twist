{
  "manifest_version": 3,
  "name": "TWIST - Earn & Stake",
  "version": "2.0.0",
  "description": "Earn TWIST tokens while browsing and stake on your favorite influencers",
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png"
    }
  },
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/inject.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "webNavigation",
    "tabs",
    "cookies",
    "contextMenus",
    "idle"
  ],
  "host_permissions": [
    "https://api.twist.io/*",
    "https://vau.twist.io/*",
    "https://wallet.twist.io/*",
    "https://*/*",
    "http://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject/vau-detector.js", "styles/*.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none';"
  },
  "commands": {
    "open_popup": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "mac": "Command+Shift+T"
      },
      "description": "Open TWIST extension"
    },
    "quick_stake": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Quick stake on current page"
    }
  },
  "options_page": "options/index.html",
  "minimum_chrome_version": "100"
}