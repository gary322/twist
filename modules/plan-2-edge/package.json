{
  "name": "@twist/edge-computing",
  "version": "1.0.0",
  "description": "Edge Computing & Security Layer for TWIST ecosystem",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:terraform": "node scripts/bundle.mjs",
    "dev": "wrangler dev workers/vau-processor/src/index.ts",
    "deploy:development": "wrangler deploy workers/vau-processor/src/index.ts --env development",
    "deploy:staging": "wrangler deploy workers/vau-processor/src/index.ts --env staging",
    "deploy:production": "wrangler deploy workers/vau-processor/src/index.ts --env production",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "TS_NODE_PROJECT=tsconfig.scripts.json ts-node scripts/e2e-test.ts",
    "test:all": "npm run build && npm run test && npm run test:e2e",
    "test:load": "echo 'Load testing would use k6'",
    "test:smoke": "npm run test:integration -- --testNamePattern=smoke",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "security-scan": "npm audit",
    "rollback:production": "wrangler rollback --env production",
    "emergency:rate-limits": "node scripts/emergency/rate-limit-adjust.js",
    "performance:boost": "node scripts/performance/boost-workers.js",
    "cache:purge": "node scripts/cache/purge.js",
    "maintenance:enable": "node scripts/maintenance/enable.js",
    "security:pentest": "npm run test:security",
    "update-monitors": "node scripts/monitoring/update-dashboards.js",
    "metrics:export": "node scripts/monitoring/export-metrics.js"
  },
  "dependencies": {
    "itty-router": "^4.0.23",
    "js-base64": "^3.7.5",
    "@noble/ed25519": "^2.0.0",
    "@cloudflare/workers-types": "^4.20240117.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "esbuild": "^0.25.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "miniflare": "^4.20260205.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "wrangler": "^3.22.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/twist-protocol/twist-edge.git"
  },
  "keywords": [
    "cloudflare-workers",
    "edge-computing",
    "vau",
    "security",
    "rate-limiting",
    "privacy"
  ],
  "author": "TWIST Protocol",
  "license": "MIT"
}
