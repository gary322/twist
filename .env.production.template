# TWIST Platform Production Environment Configuration
# Copy to .env and fill with production values

# Environment
NODE_ENV=production
LOG_LEVEL=info

# API URLs
API_BASE_URL=https://api.twist.finance
FRONTEND_URL=https://twist.finance

# Database Configuration
DATABASE_URL=postgresql://user:password@db.twist.finance:5432/twist_prod
DATABASE_SSL=true
DATABASE_POOL_MIN=10
DATABASE_POOL_MAX=50

# Redis Configuration
REDIS_URL=redis://user:password@redis.twist.finance:6379
REDIS_CLUSTER_MODE=true

# Blockchain Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WEBSOCKET_URL=wss://api.mainnet-beta.solana.com
TWIST_TOKEN_ADDRESS=TwistTokenMainnetAddress
STAKING_PROGRAM_ID=TwistStakingProgramMainnetID
WALLET_PRIVATE_KEY=encrypted:production-wallet-key

# Edge Workers
CLOUDFLARE_ACCOUNT_ID=your-account-id
CLOUDFLARE_API_TOKEN=your-api-token
WORKER_SUBDOMAIN=edge

# Authentication
JWT_SECRET=generate-64-char-secret
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
ENCRYPTION_KEY=generate-32-byte-key

# OAuth Providers
OAUTH_GOOGLE_CLIENT_ID=your-google-client-id
OAUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret
OAUTH_TWITTER_CLIENT_ID=your-twitter-client-id
OAUTH_TWITTER_CLIENT_SECRET=your-twitter-client-secret

# Email Service
EMAIL_FROM=noreply@twist.finance
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key

# Analytics Configuration
CLICKHOUSE_URL=http://clickhouse.twist.finance:8123
CLICKHOUSE_USER=analytics
CLICKHOUSE_PASSWORD=secure-password
CLICKHOUSE_DATABASE=twist_analytics

# Kafka Configuration
KAFKA_BROKERS=kafka1.twist.finance:9092,kafka2.twist.finance:9092
KAFKA_SASL_USERNAME=twist-producer
KAFKA_SASL_PASSWORD=secure-password

# External Services
IP_QUALITY_SCORE_API_KEY=your-api-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project
DATADOG_API_KEY=your-datadog-api-key

# CDN Configuration
CDN_URL=https://cdn.twist.finance
CLOUDFRONT_DISTRIBUTION_ID=your-distribution-id

# Security
ALLOWED_ORIGINS=https://twist.finance,https://app.twist.finance
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000
CORS_CREDENTIALS=true

# Feature Flags
ENABLE_STAKING=true
ENABLE_NFT=true
ENABLE_BRIDGE=true
ENABLE_ANALYTICS=true
MAINTENANCE_MODE=false

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_API_KEY=your-grafana-key
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/your-webhook

# Backup Configuration
BACKUP_S3_BUCKET=twist-backups-prod
BACKUP_ENCRYPTION_KEY=your-backup-key
BACKUP_RETENTION_DAYS=30
